@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create Product";
}
@model ClothingStore.Models.Product
@section Styles {
    <link rel="stylesheet" href="~/admin/css/asset/css_part/Product/CreateProduct.css" asp-append-version="true" />
}

<main class="create-product">
    <div class="cp-card">
        <h1>Create Product</h1>

        <form asp-controller="Product" asp-action="CreateProduct" method="post" enctype="multipart/form-data" class="cp-form" novalidate>
            <div class="cp-grid">
                <div class="form-group">
                    <label for="Name">Product name</label>
                    <input type="text" asp-for="ProductName" placeholder="Enter Name" required />
                </div>

                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="number" min="0" asp-for="Price" placeholder="Enter Price" required />
                </div>

                <div class="form-group">
                    <label for="Category">Category</label>
                    <select asp-for="CategoryName" required>
                        <option value="" >— Select —</option>
                        <option>Shirt</option>
                        <option>Pants</option>
                        <option>Accessories</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="Stock">Stock</label>
                    <input  type="number" min="0" asp-for="Stock" placeholder="Enter Stock" required />
                </div>

                <div class="form-group">
                    <label for="Discount">Discount</label>
                    <input type="number" min="0" max="1" step="0.1" asp-for="IsPromotion" placeholder="Discount? (yes:1 or no:0)">
                </div>

                <div class="form-group full">
                    <label for="Description">Description</label>
                    <textarea  asp-for="Description" rows="4"></textarea>
                </div>
                

                @* <div class="form-group image-group">
                    <label for="Image">Product image</label>
                    <div class="image-input">
                        <input asp-for="ImageUrl" id="Image" name="Image" type="file" accept="image/*" required />
                        <div class="image-preview" id="cp-image-preview" aria-hidden="true">
                            <img src="~/images/placeholder-rect.png" alt="preview" />
                        </div>
                        <label class="remove-checkbox">
                            <input type="checkbox" name="RemoveImage" value="true" /> Remove image
                        </label>
                    </div>
                </div> *@
                <div class="form-group">
                    <label for="Name">Image name</label>
                    <input type="text" asp-for="ImageUrl" placeholder="Enter Image file name" required />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <a asp-controller="Product" asp-action="ProductManager" class="btn">Cancel</a>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="  " class="btn btn-danger" onclick="return confirm('Delete this product?');">Delete</a>

            </div>
        </form>
    </div>
</main>